@model Exam_TranQuangNha.Models.Phim

@{
    ViewData["Title"] = "Edit Phim";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Update" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="TuaDe" class="form-label">Tựa Đề</label>
            <input asp-for="TuaDe" class="form-control" />
            <span asp-validation-for="TuaDe" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TrongNuoc" class="form-label">Thể Loại</label>
            <input asp-for="TrongNuoc" class="form-control" />
            <span asp-validation-for="TrongNuoc" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="GiaVe" class="form-label">Giá Vé</label>
            <input asp-for="GiaVe" class="form-control" />
            <span asp-validation-for="GiaVe" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ThoiLuong" class="form-label">Thời Lượng</label>
            <input asp-for="ThoiLuong" class="form-control" />
            <span asp-validation-for="ThoiLuong" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
